{
    "id":   "ocho-proxy",
    "cpus": 0.5,
    "mem":  256,
    "env":
    {
        "pod":              "{}",
        "ochopod_cluster":  "portal",
        "ochopod_debug":    "true",
        "ochopod_token":    "",
        "MARATHON_MASTER":  "http://127.0.0.1:8080"
    },
    "container":
    {
        "type":"DOCKER",
        "docker":
        {
            "forcePullImage":               true,
            "network":                      "BRIDGE",
            "image":                        "autodeskcloud/ochothon:1.0.2",
            "portMappings":
                [
                    {
                        "containerPort":    8080
                    },
                    {
                        "hostPort":         9000,
                        "containerPort":    9000
                    }
                ]
        },
        "volumes":[
            {
                "containerPath":            "/etc/mesos",
                "hostPath":                 "/etc/mesos",
                "mode":                     "RO"
            }
        ]
    }
}